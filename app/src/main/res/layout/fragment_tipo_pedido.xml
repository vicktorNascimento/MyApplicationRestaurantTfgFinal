<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    tools:context=".TipoPedidoFragment">

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="625dp"
        android:layout_gravity="center"
        android:background="@drawable/fondos_platos"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="318dp"
            android:layout_height="315dp"
            android:layout_gravity="center"
            android:paddingTop="20dp"
            android:src="@drawable/camarero_sirviendo_una_bebida_en_una_bandeja" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:gravity="center"
            android:text="Elige el tipo de pedido"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonCasa"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="40dp"
            android:text="Casa"
            android:textSize="25dp" />

        <Button
            android:id="@+id/buttonRestaurant"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Restaurante"
            android:textSize="25dp" />

    </LinearLayout>
</FrameLayout>